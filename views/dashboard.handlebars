<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input class="border-primary" type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Text</label>
      <input class="border-primary" id="post-text" name="post-text" />
    </div>
    <button class="rounded border-primary" type="submit" class="btn border-dark">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
<div class="col d-flex flex-wrap justify-content-center">
    {{#each posts as |post|}}
    <div class="card border-primary col-3">
      {{> post-info post}}
      {{user.username}} on {{format_date created_at}} 
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </div>
    {{/each}}
</div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>

