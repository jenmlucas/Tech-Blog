{{#each posts as |post|}}
  <article class="post">
    <div class="title">
      <h1><a href="{{post.post_text}}" target="_blank">{{post.title}}</a></h1>

      <h2><span>({{post.post_text}})</span></h2>
    </div>
    <div class="meta">
      {{post.user.username}}
      on
      {{post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
  </article>
{{/each}}